{
    "background": {
        "service_worker": "background.ts"
    },
    "content_scripts": [
        {
            "js": ["content/index.ts"],
            "matches": ["https://*/*", "http://*/*"]
        }
    ],
    "action": {
        "default_popup": "pages/popup/index.html"
    },
    "options_page": "pages/options/index.html",
    "name": "youlearn",
    "manifest_version": 3,
    "minimum_chrome_version": "93",
    "permissions": ["tabs", "storage", "unlimitedStorage"]
}
